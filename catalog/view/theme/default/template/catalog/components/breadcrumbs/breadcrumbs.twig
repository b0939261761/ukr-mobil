<ul class="breadcrumbs">
  <li class="breadcrumbs__item">
    <a href="/" class="breadcrumbs__link">
      <svg class="breadcrumbs__img-home">
        <use xlink:href="/resourse/images/shared-sprite-icons.svg#icon-home"></use>
      </svg>
    </a>
  </li>

  {% if breadcrumbs | length > 1 %}
    <li class="breadcrumbs__item breadcrumbs__item--mobile">
      <button class="breadcrumbs__btn-mobile" id="breadcrumbsBtnMobile">...</button>
    </li>
  {% endif %}

  {% for breadcrumb in breadcrumbs %}
    {% if breadcrumb.link %}
      <li class="breadcrumbs__item breadcrumbs__item--desktop">
        <a href="{{ breadcrumb.link }}" class="breadcrumbs__link">{{ breadcrumb.name }}</a>
      </li>
    {% else %}
      <li class="breadcrumbs__item breadcrumbs__item--active">{{ breadcrumb.name }}</li>
    {% endif %}
  {% endfor %}
</ul>

