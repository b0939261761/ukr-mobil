{{ header }}
<link rel="stylesheet" href="/catalog/view/theme/default/stylesheet/egofoxlab/cart.min.css?20201114">

<div id="checkout-checkout" class="container">
  <div class="wrapper-breadcrumbs">
    <ul class="breadcrumbs">
      <li class="breadcrumbs__item">
        <a href="/" class="breadcrumbs__link">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
            <path d="M280.37 148.26L96 300.11V464a16 16 0 0 0 16 16l112.06-.29a16 16 0 0 0 15.92-16V368a16 16 0 0 1 16-16h64a16 16 0 0 1 16 16v95.64a16 16 0 0 0 16 16.05L464 480a16 16 0 0 0 16-16V300L295.67 148.26a12.19 12.19 0 0 0-15.3 0zM571.6 251.47L488 182.56V44.05a12 12 0 0 0-12-12h-56a12 12 0 0 0-12 12v72.61L318.47 43a48 48 0 0 0-61 0L4.34 251.47a12 12 0 0 0-1.6 16.9l25.5 31A12 12 0 0 0 45.15 301l235.22-193.74a12.19 12.19 0 0 1 15.3 0L530.9 301a12 12 0 0 0 16.9-1.6l25.5-31a12 12 0 0 0-1.7-16.93z"/>
          </svg>
        </a>
      </li>

      <li class="breadcrumbs__item">
        {{ headingH1 }}
      </li>
    </ul>
  </div>

  <h1 class="page-title">{{ headingH1 }}</h1>

  <form id="formOrder">
    <div class="col-sm-12 col-md-6">

      <div class="form-group">
        <div class="row">
          <div class="col-sm-4">
            <label for="firstName" class="control-label">
              * Имя Получателя
            </label>
          </div>
          <div class="col-sm-8">
            <input
              id="firstName"
              class="form-control restrict-language"
              value="{{ customer.firstName }}"
              placeholder="Иванов"
              required
            >
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-4">
            <label for="lastName" class="control-label">
              * Фамилия Получателя
            </label>
          </div>
          <div class="col-sm-8">
            <input
              id="lastName"
              class="form-control restrict-language"
              value="{{ customer.lastName }}"
              placeholder="Иван"
              required
            >
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-4">
            <label for="phone" class="control-label">
              * Телефон Получателя
            </label>
          </div>
          <div class="col-sm-8">
            <input
              id="phone"
              class="form-control"
              value="{{ customer.phone }}"
              required
            >
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-4">
            <label for="email" class="control-label">
              * Email
            </label>
          </div>
          <div class="col-sm-8">
            <input
              id="email"
              class="form-control"
              value="{{ customer.email }}"
              placeholder="user@example.com"
              required
            >
          </div>
        </div>
      </div>

      <fieldset class="form-section">
        <legend class="form-section__title">Способ доставки</legend>

        <label class="input-radio">
          <input
            type="radio"
            name="shipping-method"
            class="input-radio__input"
            value="Самовывоз из г. Ровно"
          >
          <span class="input-radio__text">
            Самовывоз из г. Ровно
          </span>
        </label>

        <label class="input-radio">
          <input
            type="radio"
            name="shipping-method"
            class="input-radio__input"
            value="Самовывоз из г. Черновцы"
          >
          <span class="input-radio__text">
            Самовывоз из г. Черновцы
          </span>
        </label>

        <label class="input-radio">
          <input
            type="radio"
            name="shipping-method"
            class="input-radio__input"
            value="Новая Почта"
            checked
          >
          <span class="input-radio__text">
            Отправка службой "Новая почта"
          </span>
        </label>

        <label class="input-radio">
          <input
            type="radio"
            name="shipping-method"
            class="input-radio__input"
            value="Курьерская доставка &quot;Новая Почта&quot;"
          >
          <span class="input-radio__text">
            Курьерская доставка "Новая почта"
          </span>
        </label>

        <label class="input-radio">
          <input
            type="radio"
            name="shipping-method"
            class="input-radio__input"
            value="Курьерская доставка г. Ровно"
          >
          <span class="input-radio__text">
            Курьерская доставка г. Ровно
          </span>
        </label>
      </fieldset>

      <div class="form-group" id="formRegion">
        <div class="row">
          <div class="col-sm-4">
            <label for="npRegion" class="control-label">
              * Область
            </label>
          </div>
          <div class="col-sm-8">
            <select class="select" id="npRegion" data-selected-value="{{ customer.region }}">
              <option value="" disabled selected>-- Выберите значение --</option>
            </select>
          </div>
        </div>
      </div>

      <div class="form-group" id="formCity">
        <div class="row">
          <div class="col-sm-4">
            <label for="npCity" class="control-label">
              * Город
            </label>
          </div>
          <div class="col-sm-8">
            <select class="select" id="npCity" data-selected-value="{{ customer.city }}">
              <option value="" disabled selected>-- Выберите значение --</option>
            </select>
          </div>
        </div>
      </div>

      <div class="form-group" id="formWarehouse">
        <div class="row">
          <div class="col-sm-4">
            <label for="npWarehouse" class="control-label">
              * Отделение
            </label>
          </div>
          <div class="col-sm-8">
            <select class="select" id="npWarehouse" data-selected-value="{{ customer.warehouse }}">
              <option value="" disabled selected>-- Выберите значение --</option>
            </select>
          </div>
        </div>
      </div>

      <div class="form-group" id="formAddress">
        <div class="row">
          <div class="col-sm-4">
            <label for="address" class="control-label">
              * Адрес
            </label>
          </div>
          <div class="col-sm-8">
            <input
              id="address"
              class="form-control"
              placeholder="ул. Солнечная, 7 кв. №33"
            >
          </div>
        </div>
      </div>

      <fieldset id="wrapperPaymentMethods" class="form-section">
        <legend class="form-section__title">Метод оплаты</legend>

        <label class="input-radio" id="formNonCash">
          <input
            type="radio"
            name="payment-method"
            class="input-radio__input"
            value="Безналичная оплата на счет юридического лица"
          >
          <span class="input-radio__text">
            Безналичная оплата на счет юридического лица (реквизиты будут отправлены на электронную почту)
          </span>
        </label>

        {% if isLogged %}
          <label class="input-radio" id="formCredit">
            <input
              type="radio"
              name="payment-method"
              class="input-radio__input"
              value="В долг"
            >
            <span class="input-radio__text">
              В долг
            </span>
          </label>
        {% endif %}

        <label class="input-radio" id="formPrivatBank">
          <input
            type="radio"
            name="payment-method"
            value="Оплата на карту Приват Банка"
            class="input-radio__input"
            checked
          >
          <span class="input-radio__text">
            Оплата на карту Приват Банка (реквизиты будут отправлены в смс)
          </span>
        </label>

        <label class="input-radio" id="formCod">
          <input
            type="radio"
            name="payment-method"
            value="Наложеный платеж"
            class="input-radio__input"
          >
          <span class="input-radio__text">
            Наложеный платеж
          </span>
        </label>

        <ul id="codAttention" class="cod-attention hide">
          <li>При получении посылки вы оплачиваете доставку</li>
          <li>
            Дополнительно вы оплачиваете 4% комиссию (минимум&nbsp;10 грн.)
            за перевод средств по наложенному платежу.
            Комиссия за наложенный платеж будет включена в суму заказа.
          </li>
        </ul>

        <label class="input-radio" id="formCard">
          <input
            type="radio"
            name="payment-method"
            value="Оплата картой онлайн (LiqPay)"
            class="input-radio__input"
          >
          <span class="input-radio__text">
            Оплата картой онлайн (LiqPay)
          </span>
        </label>
      </fieldset>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-4">
            <label for="comment" class="control-label">
              Комментарий к заказу
            </label>
          </div>
          <div class="col-sm-8">
            <textarea
              id="comment"
              class="form-control form-control--textarea"
              rows="3"
            ></textarea>
          </div>
        </div>
      </div>

      <div class="form-group">
        <input type="checkbox" id="notCallback" class="checkbox hidden" />
        <label for="notCallback" class="checkbox-label checkbox-label--bold">
          Не перезванивайте мне, я уверен(на) в заказе
        </label>
      </div>
    </div>

    <div class="col-sm-12 col-md-6">
      <div id="products-table">
        <table class="table" id="checkoutCartProductsTable">
          <thead>
            <tr>
              <th>Фото</th>
              <th>Наименование</th>
              <th>Кол-во</th>
              <th>Цена</th>
              <th>Итого</th>
              <th></th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>

      <table class="cart__product-table-total">
        <tbody>
          <tr>
            <td class="cart__product-table-total-title">Всего:</td>
            <td class="cart__product-table-total-value" id="checkoutCartOrderTotal"></td>
          </tr>
          <tr>
            <td class="cart__product-table-total-title">Комиссия за перевод:</td>
            <td class="cart__product-table-total-value" id="checkoutCartOrderCommisssion"></td>
          </tr>
          <tr>
            <td class="cart__product-table-total-title">К оплате:</td>
            <td class="cart__product-table-total-value" id="checkoutCartOrderToPay"></td>
          </tr>
        </tbody>
      </table>

      <div class="block-attention">
        <p data-shipping-method="Самовывоз из г. Черновцы" class="block-attention__item hide">
          Самовывоз из г. Черновцы не доступен из-за недостаточного количества товара на складе
        </p>
        <p data-shipping-method="Самовывоз из г. Ровно" class="block-attention__item hide">
          Самовывоз из г. Ровно не доступен из-за недостаточного количества товара на складе
        </p>
      </div>
    </div>

    <div class="col-sm-12">
      <div class="wrapper-btn">
        <button class="btn-new btn-new--success btn-new--inline">
          <span class="btn-new__wrapper-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512">
              <path d="M204.78 116.47l4.1 4.1 71.69-71.8L238.78 7a24.1 24.1 0 0 0-33.9 0L167 44.87a24 24 0 0 0 0 33.8zM608 160H437l120.25 120.28A64 64 0 0 1 576 325.54V400a16 16 0 0 1-16 16H264a8 8 0 0 1-8-8v-16a8 8 0 0 1 8-8h163l-64-64h-99a8 8 0 0 1-8-8v-16a8 8 0 0 1 8-8h67L203 160H32a32 32 0 0 0-32 32v288a32 32 0 0 0 32 32h576a32 32 0 0 0 32-32V192a32 32 0 0 0-32-32zM144 415.88V432a8 8 0 0 1-8 8h-16a8 8 0 0 1-8-8v-16.29a57.26 57.26 0 0 1-31.37-11.35 8 8 0 0 1-.57-12.14L91.81 381a8.21 8.21 0 0 1 10.13-.73 24.08 24.08 0 0 0 12.82 3.73h28.11c6.5 0 11.8-5.92 11.8-13.19 0-5.95-3.61-11.19-8.77-12.73l-45-13.5c-18.59-5.58-31.58-23.42-31.58-43.39 0-24.52 19.05-44.44 42.67-45.07V240a8 8 0 0 1 8-8h16a8 8 0 0 1 8 8v16.29a57.18 57.18 0 0 1 31.37 11.35 8 8 0 0 1 .57 12.14L164.18 291a8.22 8.22 0 0 1-10.14.73 23.93 23.93 0 0 0-12.81-3.73h-28.11c-6.5 0-11.8 5.92-11.8 13.19 0 5.95 3.61 11.19 8.77 12.73l45 13.5c18.59 5.58 31.57 23.42 31.57 43.39 0 24.53-19.04 44.44-42.66 45.07zm318.87-41.25a32 32 0 0 0 22.62 9.37H528a16 16 0 0 0 16-16v-42.46a32 32 0 0 0-9.37-22.63L303.17 71.47l-71.7 71.7z"/>
            </svg>
          </span>
          <span class="btn-new__wrapper-text">
            Оформить Заказ
          </span>
        </button>
      </div>
    </div>
  </form>
</div>

<script src="/catalog/view/theme/default/js/libs/vanillaTextMask.js"></script>
<script src="/catalog/view/theme/default/js/novaposhta.min.js?20201114"></script>
<script src="/catalog/view/theme/default/js/checkout/cart.min.js?20210216"></script>

{{ footer }}
