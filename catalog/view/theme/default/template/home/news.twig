
<style>
body .module-ego-news {
  padding-top: 30px;
  margin-bottom: 30px;
}
body .module-ego-news .header {
  margin-bottom: 30px;
  font-size: 20px;
  font-weight: 600;
  color: #333;
  text-transform: uppercase;
}
body .module-ego-news .carousel-wrap {
  position: relative;
}
body .module-ego-news .content {
  display: flex;
  flex-direction: row;
  z-index: 0;
}
body .module-ego-news .content .post-item {
  width: 250px;
  margin-right: 45px;
  margin: 0 auto;
}
body .module-ego-news .content .post-item a {
  display: block;
}
body .module-ego-news .content .post-item a:hover .preview-image .description {
  visibility: visible;
}
body .module-ego-news .content .post-item a .preview-image {
  position: relative;
  width: 100%;
  height: 180px;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
body .module-ego-news .content .post-item a .preview-image .description {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
  background-color: rgba(51, 51, 51, 0.72);
  text-align: center;
  font-size: 16px;
  color: #fff;
  visibility: hidden;
}
body .module-ego-news .content .post-item a .date {
  margin-top: 5px;
  text-align: right;
  font-size: 16px;
  color: #686767;
}
@media (max-width: 768px) {
  body .module-ego-news .content .post-item {
    width: 100%;
    margin-right: 0;
  }
}
@media (max-width: 1024px) {
  body .module-ego-news .content {
    flex-wrap: wrap;
    justify-content: center;
  }
  body .module-ego-news .content .post-item {
    margin-bottom: 10px;
  }
}
</style>

<div id="slideshow-product-new-news" class="module-ego-news">
  <div class="carousel-wrap">
    <div class="nav prev"></div>
    <div class="nav next"></div>
    <div class="owl-carousel content">
      {% for item in news %}
        <div class="post-item">
          <a href="{{ item.url }}">
            <div
                class="preview-image"
                style="background-image: url({{ item.image }})"
            >
              <div class="description">{{ item.title }}</div>
            </div>
            <div class="date">{{ item.date }}</div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
window.addEventListener('load', () => {
  const elementRef = jQuery('#slideshow-product-new-news');
  const owl = elementRef.find('.content').owlCarousel({
    items: 4,
    loop: true,
    dots: true,
    responsive: {
      0: { items: 1 },
      768: { items: 2 },
      1024: { items: 4 }
    }
  });

  elementRef.find('.nav.prev').click(() => owl.trigger('prev.owl.carousel'));
  elementRef.find('.nav.next').click(() => owl.trigger('next.owl.carousel'));
});
</script>
