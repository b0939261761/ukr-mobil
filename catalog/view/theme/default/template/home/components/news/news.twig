<div class="swiper-container reset-swiper-container" id="swiperNews">
  <div class="product-swiper__title">
    <div class="product-swiper__title-text">Новини</div>
    <a class="product-swiper__btn product-swiper__btn--all" href="{{ linkNews }}">Всі новини</a>

    <button class="product-swiper__button-nav product-swiper__button-nav--prev">
      <svg class="product-swiper__button-nav-img product-swiper__button-nav-img--prev">
        <use xlink:href="/resourse/images/shared-sprite-icons.svg#icon-arrow-right"></use>
      </svg>
    </button>

    <button class="product-swiper__button-nav product-swiper__button-nav--next">
      <svg class="product-swiper__button-nav-img">
        <use xlink:href="/resourse/images/shared-sprite-icons.svg#icon-arrow-right"></use>
      </svg>
    </button>
  </div>

  <div class="swiper-wrapper reset-swiper-wrapper">
    {% for item in news %}
      <div class="swiper-slide">
        <div class="news">
          <a class="news__link" href="{{ item.link }}">
            <img class="news__img" src="{{ item.image }}" alt="">
          </a>
          <div class="news__date">
            <svg class="news__date-img">
              <use xlink:href="/resourse/images/shared-sprite-icons.svg#icon-calendar"></use>
            </svg>
            <span>{{ item.date }}</span>
          </div>
          <a class="news__name" href="{{ item.link }}">{{ item.title }}</a>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="product-swiper__scrollbar"></div>
</div>

