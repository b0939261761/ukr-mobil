<div id="cart" class="cart">
  <div class="cart__container">
    <div class="cart__wrapper {{ products ? '' : 'cart__wrapper--empty' }}">
      <div class="cart__header">
        <div class="cart__title">Кошик</div>
        {% if products %}
          <button class="cart__clear">Очистити кошик</button>
        {% endif %}
        <button class="cart__btn-close">
          <svg class="cart__btn-close-img">
            <use xlink:href="/resourse/images/shared-sprite-icons.svg#icon-close"></use>
          </svg>
        </button>
      </div>

      {% if products %}
        <ul class="cart__content">
          {% for product in products %}
            <li class="cart__item" data-id="{{ product.id }}">
              <a class="cart__item-wrapper-image" href="{{ product.link }}">
                <img class="cart__item-image" src="{{ product.image }}">
              </a>
              <a class="cart__item-name" href="{{ product.link }}">{{ product.name }}</a>
              <div class="cart__item-code">Код товару: {{ product.id }}</div>
              <div class="cart__item-quantity">
                <button
                  class="cart__item-quantity-btn cart__item-quantity-btn--minus"
                  {{ product.quantity > 1 ? '' : 'disabled' }}
                >
                  <svg class="cart__item-quantity-img-minus">
                    <use xlink:href="/resourse/images/shared-sprite-icons.svg#icon-minus"></use>
                  </svg>
                </button>
                <input
                  class="cart__item-quantity-input"
                  value="{{ product.quantity }}"
                  readonly
                />
                <button
                  class="cart__item-quantity-btn cart__item-quantity-btn--plus"
                  {{ product.quantity < product.quantityStore ? '' : 'disabled' }}
                >
                  <svg class="cart__item-quantity-img-plus">
                    <use xlink:href="/resourse/images/shared-sprite-icons.svg#icon-plus"></use>
                  </svg>
                </button>
              </div>
              <div class="cart__item-price">
                {% if product.isPromotions %}
                  <div class="cart__item-price-old">{{ product.priceOldUAH }} грн</div>
                {% endif %}
                <div>
                  <div class="cart__item-price-uah">{{ product.priceUAH }} грн</div>
                  $ {{ product.priceUSD }}
                </div>
              </div>
              <button class="cart__item-remove">
                <svg class="cart__item-remove-img">
                  <use xlink:href="/resourse/images/shared-sprite-icons.svg#icon-close"></use>
                </svg>
              </button>
            </li>
          {% endfor %}
        </ul>

        <div class="cart__footer">
          <div class="cart__total">
            <div class="cart__total-title">Загальна сума</div>
            <div class="cart__total-sum">
              <div class="cart__total-sum-uah"><span id="cartTotalSumUAH">{{ totalUAH }}</span> грн</div>
              <div class="cart__total-sum-usd">$ <span id="cartTotalSumUSD">{{ totalUSD }}</span></div>
            </div>
          </div>
          <div class="cart__total-button">
            <a class="cart__link-checkout" href="{{ linkCheckout }}">Оформити замовлення</a>
          </div>
        </div>
      {% else %}
        <div class="cart__empty">Ваш кошик пустий!</div>
      {% endif %}
    </div>
  </div>
</div>
